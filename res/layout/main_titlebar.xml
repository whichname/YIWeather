<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent" 
    android:layout_height="45dip"
    android:background="@color/titlebar_background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView 
            android:id="@+id/main_titlebar_appname_tv"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dip"
            android:text="@string/app_name"
            style="@style/text_system"/>
        <ImageView 
            android:id="@+id/main_titlebar_setting_bn"
            android:layout_alignParentRight="true"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:src="@drawable/setting"
            android:background="@drawable/imageview_background"
            android:clickable="true"/>
        <ImageView 
            android:id="@+id/main_titlebar_refresh_bn"
            android:layout_toLeftOf="@id/main_titlebar_setting_bn"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:src="@drawable/refresh"
            android:background="@drawable/imageview_background"
            android:clickable="true" />
        <ImageView 
            android:id="@+id/main_titlebar_savedcities_bn"
            android:layout_toLeftOf="@id/main_titlebar_refresh_bn"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:src="@drawable/list"
            android:background="@drawable/imageview_background"
            android:clickable="true"
            />
        <ImageView
            android:id="@+id/main_titlebar_addcities_bn"
            android:layout_toLeftOf="@id/main_titlebar_savedcities_bn"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:src="@drawable/add"
            android:background="@drawable/imageview_background"
            android:clickable="true"/>
    </RelativeLayout>
</LinearLayout>