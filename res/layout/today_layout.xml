<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:orientation="vertical" >
    <TableLayout 
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:stretchColumns="*">
	    <TableRow >
        <TextView 
            android:id="@+id/weather_future_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="今天"
            style="@style/text_system"
            android:gravity="center"
            android:background="@color/future_background"/>
        <TextView 
            android:id="@+id/weather_future_tomorrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="明天"
            style="@style/text_system"
            android:gravity="center"
            />
        </TableRow>
    </TableLayout>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/future_background">
    <LinearLayout 
        android:id="@+id/weather_future_today_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/white"/>
	<TableLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:stretchColumns="*"
	    >
	    <TableRow>
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="白天"
	            android:gravity="center"
	            style="@style/text_system"/>
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="夜晚"
	            android:gravity="center"
	            style="@style/text_system"/>
	    </TableRow>
	</TableLayout>
		<TableLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:stretchColumns="*"
	    >
	    <TableRow >
	        <ImageView 
	            android:id="@+id/weather_future_one_icona"
	            android:layout_width="60dip"
	            android:layout_height="60dip"
	            android:src="@drawable/icon0"/>
	        <TextView 
	            android:id="@+id/weather_future_one_high"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:text="未知"
	            android:gravity="center"
	            style="@style/text_system"/>
	        <ImageView 
	            android:id="@+id/weather_future_one_iconb"
	            android:layout_width="60dip"
	            android:layout_height="60dip"
	            android:src="@drawable/icon0"/>
	        <TextView 
	            android:id="@+id/weather_future_one_low"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:text="未知"
	            android:gravity="center"
	            style="@style/text_system"/>
	    </TableRow>
	    </TableLayout>
	    <TableLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dip"
	        >
	        <TableRow >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="降水概率："
	                style="@style/text_system"/>
	            <TextView 
	                android:id="@+id/weather_future_one_cop"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text="未知"
	                style="@style/text_system"/>
	        </TableRow>
	        <TableRow >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="风力："
	                style="@style/text_system"/>
	            <TextView 
	                android:id="@+id/weather_future_one_wind"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text="未知"
	                style="@style/text_system"/>
	        </TableRow>
	    </TableLayout>
	    </LinearLayout>
	    
	    <LinearLayout 
        android:id="@+id/weather_future_tomorrow_ll"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/white"/>
	<TableLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:stretchColumns="*"
	    >
	    <TableRow>
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="白天"
	            android:gravity="center"
	            style="@style/text_system"/>
	        <TextView 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="夜晚"
	            android:gravity="center"
	            style="@style/text_system"/>
	    </TableRow>
	</TableLayout>
		<TableLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:stretchColumns="*"
	    >
	    <TableRow >
	        <ImageView 
	            android:id="@+id/weather_future_two_icona"
	            android:layout_width="60dip"
	            android:layout_height="60dip"
	            android:src="@drawable/icon0"/>
	        <TextView 
	            android:id="@+id/weather_future_two_high"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:text="未知"
	            android:gravity="center"
	            style="@style/text_system"/>
	        <ImageView 
	            android:id="@+id/weather_future_two_iconb"
	            android:layout_width="60dip"
	            android:layout_height="60dip"
	            android:src="@drawable/icon0"/>
	        <TextView 
	            android:id="@+id/weather_future_two_low"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:text="未知"
	            android:gravity="center"
	            style="@style/text_system"/>
	    </TableRow>
	    </TableLayout>
	    <TableLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dip"
	        >
	        <TableRow >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="降水概率："
	                style="@style/text_system"/>
	            <TextView 
	                android:id="@+id/weather_future_two_cop"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text="未知"
	                style="@style/text_system"/>
	        </TableRow>
	        <TableRow >
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="风力："
	                style="@style/text_system"/>
	            <TextView 
	                android:id="@+id/weather_future_two_wind"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text="未知"
	                style="@style/text_system"/>
	        </TableRow>
	    </TableLayout>
	    </LinearLayout>
	    </LinearLayout>
</LinearLayout>
